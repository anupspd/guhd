<%= form_for(@hall_re) do |f| %>
  <% if @hall_re.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hall_re.errors.count, "error") %> prohibited this hall_re from being saved:</h2>

      <ul>
      <% @hall_re.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :reservation_id %><br>
    <%= f.text_field :reservation_id %>
  </div>
  <div class="field">
    <%= f.label :hall %><br>
    <%= f.text_field :hall %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
