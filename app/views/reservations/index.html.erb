<h1>Listing reservations</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Purpose</th>
      <th>Noofppl</th>
      <th>From date</th>
      <th>To date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.type %></td>
        <td><%= reservation.purpose %></td>
        <td><%= reservation.noOfPpl %></td>
        <td><%= reservation.from_date %></td>
        <td><%= reservation.to_date %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

