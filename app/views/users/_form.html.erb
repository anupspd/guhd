<div class="form-signin text-center">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2 class="form-signin-heading text-center">Registration Form</h2>

  <div class="field">
    
    <%= f.text_field :name ,  "placeholder" => "Name"%>
  </div>
  <div class="field">
    
    <%= f.text_field :email,  "placeholder" => "Email"%>
  </div>
  <div class="field">

<div class="field">
    
    <%= f.text_field :address,  "placeholder" => "Address"%>
  </div>
    
    <%= f.text_field :phone,  "placeholder" => "Phone Number"%>
  </div>
<div class="field">
    
<div class="field">
 <%= f.select(:department, ['Department of Computer Science & Technology','Department of Management Studies','Department of Physics','Department of Chemistry','Department of Botany','Department of Commerce','Department of English'], {}, { :class => 'my_style_class' }) %>   


    
  </div>
  
  <div class="field">
   <%= f.select(:designation, ['HOD','Professor','Associate Professor','Assistant Professor','Student','Lab Assistant','Office Staff'], {}, { :class => 'my_style_class' }) %>   

    
  </div>
  <div class="actions">
    <%= f.submit "Register" , "class" => "btn btn-lg btn-primary btn-block input"%>   
  </div>
<% end %>
</div>
